@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["HideMenu"] = false;
}

<div class="container my-5">
    <h2 class="mb-4 fw-bold">Últimos artículos</h2>

    <div id="articlesContainer">
    </div>

    <div class="d-flex justify-content-center">
        <button id="prevPageBtn" class="btn btn-outline-primary me-2" disabled>Página anterior</button>
        <button id="nextPageBtn" class="btn btn-outline-primary">Página siguiente</button>
    </div>
</div>

@section Scripts {
    <script>
        if (!localStorage.getItem('user')) {
            window.location.href = '/Auth/Login';
        }
    </script>

    <script>
        let currentPage = 1;
        const pageSize = 10;

        function loadArticles(page) {
            const user = JSON.parse(localStorage.getItem('user'));
            const token = user?.token;

            if (!token) {
                alert('No estás autenticado');

                return;
            }

            $.ajax({
                url: apiUrl(`/api/articles?pageNumber=${page}&pageSize=${pageSize}`),
                method: 'GET',
                headers: {
                    'Authorization': `Bearer ${token}`
                },
                success: function (data) {
                    renderArticles(data.articles);
                    updatePagination(data.totalCount, data.pageNumber, data.pageSize);
                },
                error: function () {
                    alert('Error al cargar artículos');
                }
            });
        }

        function renderArticles(articles) {
            const container = $('#articlesContainer');
            container.empty();

            articles.forEach(article => {
                container.append(`
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-bold">${article.title}</h5>
                            <h6 class="card-subtitle mb-3 text-muted">${article.author} - ${formatDate(article.publicationDate)}</h6>
                            <p class="card-text">${article.content}</p>
                            <div class="d-flex justify-content-end">
                                <a href="/Articles/Details/${article.id}" class="btn btn-primary">Ver artículo</a>
                            </div>
                        </div>
                    </div>
                `);
            });
        }

        function updatePagination(totalCount, pageNumber, pageSize) {
            const totalPages = Math.ceil(totalCount / pageSize) > 3 
                ? 3 
                : Math.ceil(totalCount / pageSize);

            $('#prevPageBtn').prop('disabled', pageNumber === 1);
            $('#nextPageBtn').prop('disabled', pageNumber >= totalPages);
        }

        $('#prevPageBtn').on('click', function () {
            if (currentPage > 1) {
                currentPage--;

                loadArticles(currentPage);
            }
        });

        $('#nextPageBtn').on('click', function () {
            if (currentPage < 3) {
                currentPage++;

                loadArticles(currentPage);
            }
        });

        $(document).ready(function () {
            loadArticles(currentPage);
        });
    </script>
}